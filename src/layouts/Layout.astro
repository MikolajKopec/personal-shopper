---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Twoja osobista stylistka z Wietnamu dobierze kompletne stylizacje z lokalnych butików. Jedwab, len, bawełna — w cenach, za które w sieciówce dostaniesz poliester." } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>

    <!-- Open Graph -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:type" content="website">
    <meta property="og:locale" content="pl_PL">

    <!-- Favicon -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>山</text></svg>">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;1,400;1,500&family=DM+Sans:ital,opsz,wght@0,9..40,300;0,9..40,400;0,9..40,500;1,9..40,300;1,9..40,400&display=swap" rel="stylesheet">
</head>
<body>
    <slot />
</body>
</html>

<style is:global>
/* ============================================
   SĂN STYLE — Elevated Asian Luxury
   Warm neutrals with brass/gold accents
   ============================================ */

:root {
    /* Core Palette */
    --color-ivory: #FDFBF7;
    --color-sand: #F5F0E8;
    --color-stone: #E5DED3;
    --color-taupe: #C4B8A5;
    --color-warm-gray: #8A7F72;
    --color-espresso: #2D2926;
    --color-ink: #1A1816;

    /* Accent - Warm Brass */
    --color-brass: #B8956E;
    --color-brass-light: #D4B896;
    --color-brass-dark: #96744A;

    /* Functional */
    --color-success: #5B8A6F;
    --color-error: #C17059;

    /* Typography */
    --font-display: 'Playfair Display', Georgia, serif;
    --font-body: 'DM Sans', -apple-system, BlinkMacSystemFont, sans-serif;

    /* Spacing Scale */
    --space-2xs: 0.25rem;
    --space-xs: 0.5rem;
    --space-sm: 1rem;
    --space-md: 1.5rem;
    --space-lg: 2.5rem;
    --space-xl: 4rem;
    --space-2xl: 6rem;
    --space-3xl: 10rem;

    /* Layout */
    --container-max: 1200px;
    --container-narrow: 800px;
    --gutter: clamp(1.5rem, 5vw, 4rem);

    /* Motion */
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    --ease-out-quart: cubic-bezier(0.25, 1, 0.5, 1);
    --ease-in-out: cubic-bezier(0.65, 0, 0.35, 1);
    --duration-fast: 0.2s;
    --duration-normal: 0.4s;
    --duration-slow: 0.8s;

    /* Effects */
    --shadow-sm: 0 2px 8px rgba(45, 41, 38, 0.06);
    --shadow-md: 0 8px 30px rgba(45, 41, 38, 0.08);
    --shadow-lg: 0 20px 60px rgba(45, 41, 38, 0.12);
    --shadow-glow: 0 0 40px rgba(184, 149, 110, 0.15);
}

/* ============================================
   Reset & Base
   ============================================ */

*, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    scroll-behavior: smooth;
    font-size: 16px;
    scroll-padding-top: 100px;
}

body {
    font-family: var(--font-body);
    font-weight: 400;
    line-height: 1.65;
    color: var(--color-espresso);
    background-color: var(--color-ivory);
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

/* Grain Texture Overlay */
.grain-overlay {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 9999;
    opacity: 0.035;
    mix-blend-mode: multiply;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.7' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
}

/* Selection */
::selection {
    background: var(--color-brass-light);
    color: var(--color-ink);
}

a {
    color: inherit;
    text-decoration: none;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

button {
    font-family: inherit;
    cursor: pointer;
    border: none;
    background: none;
}

/* Container */
.container {
    width: 100%;
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--gutter);
}

.container--narrow {
    max-width: var(--container-narrow);
}

/* ============================================
   Typography System
   ============================================ */

h1, h2, h3, h4, h5 {
    font-family: var(--font-display);
    font-weight: 400;
    line-height: 1.1;
    letter-spacing: -0.02em;
}

h1 {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
}

h2 {
    font-size: clamp(2rem, 4vw, 3rem);
}

h3 {
    font-size: clamp(1.25rem, 2vw, 1.5rem);
}

p {
    color: var(--color-warm-gray);
}

.text-sm {
    font-size: 0.875rem;
}

.text-xs {
    font-size: 0.75rem;
}

.text-label {
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
}

/* ============================================
   Announcement Bar
   ============================================ */

.announcement-bar {
    background: var(--color-ink);
    color: var(--color-sand);
    padding: var(--space-xs) var(--gutter);
    text-align: center;
    font-size: 0.8125rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    position: relative;
    overflow: hidden;
}

.announcement-bar::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, transparent 0%, rgba(184, 149, 110, 0.1) 50%, transparent 100%);
    animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
    0%, 100% { transform: translateX(-100%); }
    50% { transform: translateX(100%); }
}

.announcement-icon {
    color: var(--color-brass);
    display: flex;
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

.announcement-bar strong {
    color: var(--color-brass-light);
}

/* ============================================
   Navigation
   ============================================ */

.nav {
    position: sticky;
    top: 0;
    z-index: 1000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-sm) var(--gutter);
    background: rgba(253, 251, 247, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid transparent;
    transition: border-color var(--duration-normal) var(--ease-out-expo),
                box-shadow var(--duration-normal) var(--ease-out-expo);
}

.nav.scrolled {
    border-bottom-color: var(--color-stone);
    box-shadow: var(--shadow-sm);
}

.nav-logo {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
}

.logo-mark {
    font-size: 1.75rem;
    color: var(--color-brass);
    font-weight: 300;
    transition: transform var(--duration-normal) var(--ease-out-expo);
}

.nav-logo:hover .logo-mark {
    transform: rotate(-5deg) scale(1.1);
}

.logo-text {
    font-family: var(--font-display);
    font-size: 1.375rem;
    font-weight: 500;
    letter-spacing: 0.02em;
}

.nav-links {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
}

.nav-links a {
    font-size: 0.875rem;
    font-weight: 500;
    position: relative;
    transition: color var(--duration-fast) var(--ease-out-expo);
}

.nav-links a:not(.nav-cta)::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-brass);
    transition: width var(--duration-normal) var(--ease-out-expo);
}

.nav-links a:not(.nav-cta):hover::after {
    width: 100%;
}

.nav-links a:hover {
    color: var(--color-brass-dark);
}

.nav-cta {
    padding: var(--space-xs) var(--space-md);
    background: var(--color-espresso);
    color: var(--color-ivory) !important;
    border-radius: 100px;
    transition: all var(--duration-normal) var(--ease-out-expo) !important;
    position: relative;
    overflow: hidden;
}

.nav-cta::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--color-brass-dark);
    transform: translateY(100%);
    transition: transform var(--duration-normal) var(--ease-out-expo);
}

.nav-cta span {
    position: relative;
    z-index: 1;
}

.nav-cta:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.nav-cta:hover::before {
    transform: translateY(0);
}

/* ============================================
   Hero Section
   ============================================ */

.hero {
    min-height: calc(100vh - 120px);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    padding: var(--space-2xl) var(--gutter);
    max-width: 1400px;
    margin: 0 auto;
    align-items: center;
}

.hero-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

/* Hero Tagline */
.hero-tagline {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
    overflow: hidden;
}

.tagline-line {
    width: 0;
    height: 1px;
    background: var(--color-brass);
    animation: expandLine 1s var(--ease-out-expo) 0.5s forwards;
}

@keyframes expandLine {
    to { width: 50px; }
}

.hero-tagline span:last-child {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-brass);
    opacity: 0;
    transform: translateX(-20px);
    animation: fadeSlideIn 0.8s var(--ease-out-expo) 0.7s forwards;
}

@keyframes fadeSlideIn {
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

/* Hero Title with Split Animation */
.hero-title {
    margin-bottom: var(--space-md);
    overflow: hidden;
}

.title-line {
    display: block;
    opacity: 0;
    transform: translateY(100%);
    animation: revealUp 1s var(--ease-out-expo) forwards;
}

.title-line:nth-child(1) { animation-delay: 0.3s; }
.title-line:nth-child(2) { animation-delay: 0.45s; }

@keyframes revealUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.title-accent {
    font-style: italic;
    color: var(--color-brass-dark);
    position: relative;
}

.title-accent::after {
    content: '';
    position: absolute;
    bottom: 0.1em;
    left: 0;
    width: 100%;
    height: 0.35em;
    background: var(--color-brass);
    opacity: 0.15;
    transform: scaleX(0);
    transform-origin: left;
    animation: scaleIn 0.8s var(--ease-out-expo) 1s forwards;
}

@keyframes scaleIn {
    to { transform: scaleX(1); }
}

/* Hero Description */
.hero-description {
    font-size: 1.125rem;
    line-height: 1.75;
    max-width: 480px;
    margin-bottom: var(--space-lg);
    opacity: 0;
    transform: translateY(20px);
    animation: fadeSlideUp 0.8s var(--ease-out-expo) 0.8s forwards;
}

@keyframes fadeSlideUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Hero Stats */
.hero-stats {
    display: flex;
    gap: var(--space-lg);
    margin-bottom: var(--space-lg);
    padding: var(--space-md) 0;
    border-top: 1px solid var(--color-stone);
    border-bottom: 1px solid var(--color-stone);
    opacity: 0;
    animation: fadeIn 0.6s var(--ease-out-expo) 1s forwards;
}

@keyframes fadeIn {
    to { opacity: 1; }
}

.stat {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xs);
}

.stat-value {
    font-family: var(--font-display);
    font-size: 1.75rem;
    color: var(--color-espresso);
    line-height: 1;
}

.stat-label {
    font-size: 0.6875rem;
    color: var(--color-taupe);
    text-transform: uppercase;
    letter-spacing: 0.1em;
}

/* Hero CTA */
.hero-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background: var(--color-espresso);
    color: var(--color-ivory);
    font-size: 0.9375rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    border-radius: 100px;
    width: fit-content;
    position: relative;
    overflow: hidden;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeSlideUp 0.8s var(--ease-out-expo) 1.1s forwards;
    transition: transform var(--duration-normal) var(--ease-out-expo),
                box-shadow var(--duration-normal) var(--ease-out-expo);
}

.hero-cta::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--color-brass-dark) 0%, var(--color-brass) 100%);
    transform: translateX(-100%);
    transition: transform var(--duration-slow) var(--ease-out-expo);
}

.hero-cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 20px 40px rgba(184, 149, 110, 0.25);
}

.hero-cta:hover::before {
    transform: translateX(0);
}

.hero-cta span,
.hero-cta svg {
    position: relative;
    z-index: 1;
}

.hero-cta svg {
    transition: transform var(--duration-normal) var(--ease-out-expo);
}

.hero-cta:hover svg {
    transform: translateX(5px);
}

.hero-note {
    margin-top: var(--space-sm);
    font-size: 0.8125rem;
    color: var(--color-taupe);
    opacity: 0;
    animation: fadeIn 0.6s var(--ease-out-expo) 1.3s forwards;
}

/* Hero Visual */
.hero-visual {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    opacity: 0;
    transform: translateX(40px);
    animation: slideInRight 1s var(--ease-out-expo) 0.5s forwards;
}

@keyframes slideInRight {
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.hero-image-container {
    aspect-ratio: 4/5;
    max-height: 520px;
    position: relative;
    overflow: visible;
}

/* Decorative frame */
.hero-image-container::before {
    content: '';
    position: absolute;
    top: -20px;
    right: -20px;
    width: 100%;
    height: 100%;
    border: 1px solid var(--color-brass);
    opacity: 0.4;
    z-index: -1;
    transition: all var(--duration-slow) var(--ease-out-expo);
}

.hero-image-container:hover::before {
    top: -25px;
    right: -25px;
}

/* Corner accents */
.hero-image-container::after {
    content: '山';
    position: absolute;
    bottom: -30px;
    left: -30px;
    font-size: 4rem;
    color: var(--color-brass);
    opacity: 0.1;
    font-family: var(--font-display);
    z-index: -1;
}

.hero-image {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    filter: grayscale(15%) contrast(1.05);
    transition: filter var(--duration-slow) var(--ease-out-expo),
                transform var(--duration-slow) var(--ease-out-expo);
}

.hero-image-container:hover .hero-image {
    filter: grayscale(0%) contrast(1);
    transform: scale(1.02);
}

/* Hero Comparison */
.hero-comparison {
    display: flex;
    align-items: stretch;
    background: var(--color-sand);
    border-radius: 8px;
    overflow: hidden;
    position: relative;
}

.comparison-item {
    flex: 1;
    padding: var(--space-md);
    display: flex;
    flex-direction: column;
    gap: 6px;
    transition: all var(--duration-normal) var(--ease-out-expo);
}

.comparison-them {
    background: var(--color-stone);
}

.comparison-us {
    background: var(--color-espresso);
    color: var(--color-ivory);
}

.comparison-brand {
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    opacity: 0.6;
}

.comparison-material {
    font-size: 0.8125rem;
}

.comparison-price {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 500;
    margin-top: auto;
}

.comparison-us .comparison-price {
    color: var(--color-brass-light);
}

.comparison-vs {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 36px;
    height: 36px;
    background: var(--color-ivory);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.6875rem;
    font-weight: 700;
    color: var(--color-taupe);
    text-transform: uppercase;
    box-shadow: var(--shadow-md);
}

/* ============================================
   Vietnam Moodboard
   ============================================ */

.vietnam-moodboard {
    background: var(--color-sand);
    padding: var(--space-3xl) var(--gutter);
    overflow: hidden;
    position: relative;
}

.vietnam-moodboard::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-brass), transparent);
    opacity: 0.3;
}

.moodboard-container {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
}

.moodboard-label {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
    background: var(--color-ivory);
    padding: var(--space-sm) var(--space-xl);
    box-shadow: var(--shadow-lg);
    text-align: center;
}

.moodboard-label span {
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-style: italic;
    color: var(--color-brass-dark);
    letter-spacing: 0.05em;
    display: block;
}

.moodboard-label small {
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-taupe);
    margin-top: var(--space-2xs);
    display: block;
}

.moodboard-collage {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: repeat(3, 130px);
    gap: 0;
    position: relative;
}

.collage-item {
    position: relative;
    overflow: hidden;
    cursor: pointer;
}

.collage-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-slow) var(--ease-out-expo),
                filter var(--duration-slow) var(--ease-out-expo);
    filter: grayscale(20%);
}

.collage-item:hover img {
    transform: scale(1.08);
    filter: grayscale(0%);
}

/* Positioning each item for collage effect */
.collage-1 {
    grid-column: 1 / 5;
    grid-row: 1 / 3;
    transform: rotate(-2deg);
    box-shadow: 8px 8px 30px rgba(45, 41, 38, 0.2);
    z-index: 3;
}

.collage-2 {
    grid-column: 4 / 7;
    grid-row: 1 / 2;
    transform: rotate(1deg) translateY(15px);
    box-shadow: 5px 5px 20px rgba(45, 41, 38, 0.15);
    z-index: 2;
}

.collage-3 {
    grid-column: 6 / 10;
    grid-row: 1 / 3;
    transform: rotate(2deg) translateX(-15px);
    box-shadow: 8px 8px 35px rgba(45, 41, 38, 0.2);
    z-index: 4;
}

.collage-4 {
    grid-column: 9 / 13;
    grid-row: 1 / 2;
    transform: rotate(-1deg) translateY(20px);
    box-shadow: 6px 6px 25px rgba(45, 41, 38, 0.15);
    z-index: 1;
}

.collage-5 {
    grid-column: 2 / 6;
    grid-row: 2 / 4;
    transform: rotate(1.5deg) translateY(-25px);
    box-shadow: 8px 8px 30px rgba(45, 41, 38, 0.2);
    z-index: 5;
}

.collage-6 {
    grid-column: 8 / 12;
    grid-row: 2 / 4;
    transform: rotate(-2deg) translateY(-20px);
    box-shadow: 6px 6px 25px rgba(45, 41, 38, 0.18);
    z-index: 6;
}

/* Polaroid border effect */
.collage-item::before {
    content: '';
    position: absolute;
    inset: 0;
    border: 5px solid var(--color-ivory);
    z-index: 1;
    pointer-events: none;
}

/* ============================================
   Social Proof Bar
   ============================================ */

.social-proof-bar {
    background: var(--color-ivory);
    padding: var(--space-lg) var(--gutter);
    border-top: 1px solid var(--color-stone);
    border-bottom: 1px solid var(--color-stone);
    overflow: hidden;
}

.proof-content {
    max-width: var(--container-max);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xl);
    flex-wrap: wrap;
}

.proof-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
}

.proof-number {
    font-family: var(--font-display);
    font-size: 2.5rem;
    color: var(--color-brass);
    line-height: 1;
}

.proof-label {
    font-size: 0.9375rem;
    color: var(--color-warm-gray);
}

.proof-divider {
    width: 1px;
    height: 50px;
    background: linear-gradient(to bottom, transparent, var(--color-stone), transparent);
}

.proof-text {
    font-family: var(--font-display);
    font-style: italic;
    font-size: 1.0625rem;
    color: var(--color-espresso);
    max-width: 400px;
}

.proof-source {
    font-size: 0.75rem;
    color: var(--color-taupe);
    white-space: nowrap;
}

/* ============================================
   Section Headers
   ============================================ */

.section-header {
    display: flex;
    align-items: baseline;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
}

.section-header-center {
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-xs);
}

.section-number {
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-style: italic;
    color: var(--color-brass);
    letter-spacing: 0.05em;
}

.section-title {
    position: relative;
}

/* ============================================
   Process Section
   ============================================ */

.process {
    padding: var(--space-3xl) var(--gutter);
    background: var(--color-ivory);
}

.process-intro {
    max-width: 650px;
    margin-bottom: var(--space-2xl);
}

.process-intro p {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-style: italic;
    line-height: 1.6;
    color: var(--color-espresso);
}

.process-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
}

.process-card {
    background: var(--color-sand);
    padding: var(--space-xl) var(--space-lg);
    position: relative;
    overflow: hidden;
    transition: transform var(--duration-normal) var(--ease-out-expo),
                box-shadow var(--duration-normal) var(--ease-out-expo);
}

.process-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, var(--color-brass), var(--color-brass-light));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--duration-slow) var(--ease-out-expo);
}

.process-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
}

.process-card:hover::before {
    transform: scaleX(1);
}

.process-card-number {
    position: absolute;
    top: var(--space-lg);
    right: var(--space-lg);
    font-family: var(--font-display);
    font-size: 4rem;
    color: var(--color-brass);
    opacity: 0.15;
    line-height: 1;
    transition: opacity var(--duration-normal) var(--ease-out-expo);
}

.process-card:hover .process-card-number {
    opacity: 0.25;
}

.process-card h3 {
    margin-bottom: var(--space-sm);
    color: var(--color-espresso);
    position: relative;
}

.process-card p {
    font-size: 0.9375rem;
    margin-bottom: var(--space-lg);
    line-height: 1.7;
}

.process-card-time {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-brass);
    padding-top: var(--space-sm);
    border-top: 1px solid var(--color-stone);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
}

.process-card-time::before {
    content: '';
    width: 6px;
    height: 6px;
    background: var(--color-brass);
    border-radius: 50%;
}

.process-note {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: linear-gradient(135deg, rgba(184, 149, 110, 0.08) 0%, rgba(184, 149, 110, 0.02) 100%);
    border-left: 3px solid var(--color-brass);
    font-size: 0.9375rem;
    color: var(--color-espresso);
    border-radius: 0 8px 8px 0;
}

.process-note svg {
    flex-shrink: 0;
    color: var(--color-brass);
}

/* ============================================
   Pricing Section
   ============================================ */

.pricing {
    padding: var(--space-3xl) var(--gutter);
    background: var(--color-espresso);
    color: var(--color-ivory);
    position: relative;
    overflow: hidden;
}

.pricing::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 60%;
    height: 200%;
    background: radial-gradient(ellipse, rgba(184, 149, 110, 0.08) 0%, transparent 70%);
    pointer-events: none;
}

.pricing .section-number {
    color: var(--color-brass-light);
}

.pricing .section-title {
    color: var(--color-ivory);
}

.pricing-cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
    margin-bottom: var(--space-2xl);
    position: relative;
}

.pricing-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    padding: var(--space-2xl);
    position: relative;
    transition: all var(--duration-normal) var(--ease-out-expo);
}

.pricing-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(184, 149, 110, 0.3);
    transform: translateY(-5px);
}

.pricing-badge {
    position: absolute;
    top: var(--space-lg);
    right: var(--space-lg);
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-brass-light);
    padding: var(--space-xs) var(--space-sm);
    border: 1px solid var(--color-brass);
    opacity: 0.8;
}

.pricing-card h3 {
    font-size: 1.375rem;
    margin-bottom: var(--space-md);
    color: var(--color-ivory);
}

.pricing-amount {
    display: flex;
    align-items: baseline;
    gap: 6px;
    margin-bottom: var(--space-lg);
}

.price-prefix {
    font-size: 1rem;
    color: var(--color-taupe);
}

.price {
    font-family: var(--font-display);
    font-size: 3.5rem;
    font-weight: 400;
    line-height: 1;
    letter-spacing: -0.02em;
}

.currency {
    font-size: 1rem;
    color: var(--color-taupe);
}

.pricing-features {
    list-style: none;
}

.pricing-features li {
    padding: var(--space-xs) 0;
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.7);
    padding-left: var(--space-lg);
    position: relative;
}

.pricing-features li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 8px;
    height: 1px;
    background: var(--color-brass);
}

.pricing-card-product .pricing-note {
    font-size: 0.875rem;
    color: var(--color-taupe);
    margin-bottom: var(--space-lg);
}

.pricing-example {
    background: rgba(0, 0, 0, 0.25);
    padding: var(--space-lg);
    border-radius: 4px;
}

.example-title {
    display: block;
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-taupe);
    margin-bottom: var(--space-sm);
}

.example-row {
    display: flex;
    justify-content: space-between;
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.5);
    padding: var(--space-xs) 0;
}

.example-total {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-top: var(--space-xs);
    padding-top: var(--space-sm);
    color: var(--color-ivory);
    font-weight: 500;
}

/* Pricing Comparison */
.pricing-comparison {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: var(--space-xl);
    border-radius: 4px;
}

.pricing-comparison h4 {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-brass-light);
    margin-bottom: var(--space-lg);
    font-family: var(--font-body);
}

.comparison-table {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
}

.comparison-row {
    display: grid;
    grid-template-columns: 1fr 1.5fr 1fr;
    gap: var(--space-lg);
    padding: var(--space-sm) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    font-size: 0.9375rem;
    align-items: center;
}

.comparison-label {
    color: var(--color-ivory);
    font-weight: 500;
}

.comparison-other {
    color: var(--color-taupe);
    text-decoration: line-through;
    opacity: 0.6;
}

.comparison-ours {
    color: var(--color-brass-light);
    font-weight: 500;
}

.comparison-footnote {
    margin-top: var(--space-lg);
    font-size: 0.75rem;
    color: var(--color-taupe);
    font-style: italic;
}

/* ============================================
   Examples Section
   ============================================ */

.examples {
    padding: var(--space-3xl) var(--gutter);
    background: var(--color-sand);
}

.examples-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
}

.example-card {
    background: var(--color-ivory);
    overflow: hidden;
    transition: transform var(--duration-normal) var(--ease-out-expo),
                box-shadow var(--duration-normal) var(--ease-out-expo);
    position: relative;
}

.example-card::after {
    content: '';
    position: absolute;
    inset: 0;
    border: 1px solid transparent;
    transition: border-color var(--duration-normal) var(--ease-out-expo);
    pointer-events: none;
}

.example-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-lg);
}

.example-card:hover::after {
    border-color: var(--color-brass);
}

.example-image {
    aspect-ratio: 3/4;
    overflow: hidden;
    position: relative;
}

.example-image::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(45, 41, 38, 0.3) 0%, transparent 50%);
    opacity: 0;
    transition: opacity var(--duration-normal) var(--ease-out-expo);
}

.example-card:hover .example-image::after {
    opacity: 1;
}

.example-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(20%);
    transition: filter var(--duration-slow) var(--ease-out-expo),
                transform var(--duration-slow) var(--ease-out-expo);
}

.example-card:hover .example-image img {
    filter: grayscale(0%);
    transform: scale(1.05);
}

.example-content {
    padding: var(--space-lg);
}

.example-style {
    display: inline-block;
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-brass);
    margin-bottom: var(--space-xs);
    padding-bottom: var(--space-xs);
    border-bottom: 1px solid var(--color-brass);
}

.example-content p {
    font-size: 0.9375rem;
    margin-bottom: var(--space-sm);
    line-height: 1.6;
}

.example-price {
    font-family: var(--font-display);
    font-size: 1.25rem;
    color: var(--color-espresso);
}

.examples-note {
    text-align: center;
    font-size: 0.9375rem;
    color: var(--color-taupe);
    font-style: italic;
}

/* ============================================
   Personal Note Section
   ============================================ */

.personal-note {
    padding: var(--space-3xl) var(--gutter);
    background: var(--color-ivory);
    position: relative;
}

.personal-note::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(184, 149, 110, 0.06) 0%, transparent 70%);
    pointer-events: none;
}

.note-content {
    max-width: 720px;
    margin: 0 auto;
    text-align: center;
    position: relative;
}

.note-quote {
    font-family: var(--font-display);
    font-size: 10rem;
    color: var(--color-brass);
    opacity: 0.12;
    line-height: 0.5;
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%);
    user-select: none;
}

.note-text {
    font-family: var(--font-display);
    font-size: 1.375rem;
    font-style: italic;
    line-height: 1.7;
    color: var(--color-espresso);
    margin-bottom: var(--space-md);
    position: relative;
}

.note-signature {
    margin-top: var(--space-xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-stone);
    display: inline-block;
}

.signature-names {
    display: block;
    font-family: var(--font-display);
    font-size: 1.375rem;
    color: var(--color-espresso);
    margin-bottom: var(--space-2xs);
}

.signature-role {
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-taupe);
}

/* ============================================
   FAQ Section
   ============================================ */

.faq {
    padding: var(--space-3xl) var(--gutter);
    background: var(--color-sand);
}

.faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
}

.faq-item {
    background: var(--color-ivory);
    padding: var(--space-xl);
    transition: transform var(--duration-normal) var(--ease-out-expo),
                box-shadow var(--duration-normal) var(--ease-out-expo);
    position: relative;
    overflow: hidden;
}

.faq-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 3px;
    height: 0;
    background: var(--color-brass);
    transition: height var(--duration-normal) var(--ease-out-expo);
}

.faq-item:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

.faq-item:hover::before {
    height: 100%;
}

.faq-item h4 {
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 1rem;
    margin-bottom: var(--space-sm);
    color: var(--color-espresso);
    padding-right: var(--space-md);
}

.faq-item p {
    font-size: 0.9375rem;
    line-height: 1.7;
}

/* ============================================
   Form Section
   ============================================ */

.form-section {
    padding: var(--space-3xl) var(--gutter);
    position: relative;
    overflow: hidden;
    background: var(--color-ivory);
}

.form-background {
    position: absolute;
    inset: 0;
    pointer-events: none;
}

.form-bg-shape {
    position: absolute;
    top: -30%;
    right: -15%;
    width: 70%;
    height: 160%;
    background: linear-gradient(135deg, var(--color-brass) 0%, transparent 50%);
    opacity: 0.04;
    transform: rotate(-12deg);
    border-radius: 50%;
}

.form-container {
    max-width: 560px;
    margin: 0 auto;
    position: relative;
}

.form-header {
    text-align: center;
    margin-bottom: var(--space-xl);
}

.form-urgency {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--color-espresso);
    color: var(--color-ivory);
    padding: var(--space-xs) var(--space-md);
    border-radius: 100px;
    margin-bottom: var(--space-lg);
    font-size: 0.8125rem;
}

.urgency-badge {
    font-size: 0.5625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-brass);
    background: rgba(184, 149, 110, 0.2);
    padding: 4px 8px;
    border-radius: 100px;
}

.spots-remaining {
    color: var(--color-brass-light);
    font-weight: 600;
}

.form-header h2 {
    margin-bottom: var(--space-sm);
}

.form-header p {
    max-width: 420px;
    margin: 0 auto;
}

/* Form Styles */
.signup-form {
    background: var(--color-ivory);
    padding: var(--space-2xl);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--color-stone);
    position: relative;
}

.signup-form::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-brass), var(--color-brass-light), var(--color-brass));
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
}

.form-field {
    display: flex;
    flex-direction: column;
    margin-bottom: var(--space-md);
    position: relative;
}

.form-row .form-field {
    margin-bottom: 0;
}

.form-field label {
    font-size: 0.8125rem;
    font-weight: 500;
    margin-bottom: var(--space-xs);
    color: var(--color-espresso);
    transition: color var(--duration-fast) var(--ease-out-expo);
}

.form-field.focused label {
    color: var(--color-brass);
}

.form-field input,
.form-field select {
    padding: var(--space-md);
    border: 1px solid var(--color-stone);
    background: var(--color-ivory);
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--color-espresso);
    transition: all var(--duration-fast) var(--ease-out-expo);
    border-radius: 4px;
}

.form-field input:focus,
.form-field select:focus {
    outline: none;
    border-color: var(--color-brass);
    box-shadow: 0 0 0 4px rgba(184, 149, 110, 0.1);
}

.form-field input::placeholder {
    color: var(--color-taupe);
}

/* Submit button */
.form-submit {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    background: var(--color-espresso);
    color: var(--color-ivory);
    font-size: 1rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    border-radius: 100px;
    position: relative;
    overflow: hidden;
    transition: all var(--duration-normal) var(--ease-out-expo);
}

.form-submit::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--color-brass-dark) 0%, var(--color-brass) 100%);
    transform: translateX(-100%);
    transition: transform var(--duration-slow) var(--ease-out-expo);
}

.form-submit span,
.form-submit svg {
    position: relative;
    z-index: 1;
}

.form-submit:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(184, 149, 110, 0.3);
}

.form-submit:hover::before {
    transform: translateX(0);
}

.form-submit svg {
    transition: transform var(--duration-normal) var(--ease-out-expo);
}

.form-submit:hover svg {
    transform: translateX(5px);
}

/* Trust items */
.form-trust {
    display: flex;
    justify-content: center;
    gap: var(--space-xl);
    margin-top: var(--space-xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-stone);
}

.trust-item {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.75rem;
    color: var(--color-taupe);
}

.trust-item svg {
    color: var(--color-brass);
}

.form-footer {
    margin-top: var(--space-xl);
    text-align: center;
}

.form-footer p {
    font-size: 0.8125rem;
    color: var(--color-taupe);
    max-width: 380px;
    margin: 0 auto;
}

/* ============================================
   Footer
   ============================================ */

.footer {
    background: var(--color-ink);
    color: var(--color-sand);
    padding: var(--space-xl) var(--gutter);
}

.footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: var(--container-max);
    margin: 0 auto;
}

.footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
}

.footer .logo-mark {
    color: var(--color-brass);
}

.footer .logo-text {
    color: var(--color-sand);
}

.footer-links {
    display: flex;
    gap: var(--space-xl);
}

.footer-links a {
    font-size: 0.875rem;
    color: var(--color-taupe);
    transition: color var(--duration-fast) var(--ease-out-expo);
}

.footer-links a:hover {
    color: var(--color-brass);
}

.footer-copy {
    font-size: 0.75rem;
    color: var(--color-taupe);
}

/* ============================================
   Modal
   ============================================ */

.modal {
    position: fixed;
    inset: 0;
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--gutter);
    opacity: 0;
    visibility: hidden;
    transition: all var(--duration-normal) var(--ease-out-expo);
}

.modal.active {
    opacity: 1;
    visibility: visible;
}

.modal-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(26, 24, 22, 0.9);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
}

.modal-content {
    position: relative;
    background: var(--color-ivory);
    padding: var(--space-2xl) var(--space-xl);
    max-width: 440px;
    text-align: center;
    transform: translateY(30px) scale(0.95);
    transition: transform var(--duration-normal) var(--ease-out-expo);
}

.modal.active .modal-content {
    transform: translateY(0) scale(1);
}

.modal-icon {
    width: 88px;
    height: 88px;
    margin: 0 auto var(--space-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(184, 149, 110, 0.15) 0%, rgba(184, 149, 110, 0.05) 100%);
    border-radius: 50%;
    color: var(--color-brass);
}

.modal-content h3 {
    font-size: 1.75rem;
